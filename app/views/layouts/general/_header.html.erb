<header>
      <nav class="top-bar">
  <ul class="title-area">
    <!-- Title Area -->
    <li class="name">
      <h1><%= link_to "eShop Online Store", store_index_path %></h1>
    </li>
    <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <!-- Left Nav Section -->
    <ul class="left">
      	
      	<li class="divider"></li>
      	<% if admin_signed_in? %>
      		<li>
      			<%= link_to('Admin Logout', destroy_admin_session_path, :method=>'delete') %>
      		</li>
			
		<%else%>
			<li>
				<%= link_to('Admin Login', admin_session_path) %>
			</li>
		<% end%>
      	
      	<% if admin_signed_in? %>
	      	<li class="has-dropdown"><a href="#">Products</a>
	
	        <ul class="dropdown">
	          <li>
	    		<%= link_to('View Products', products_path) %>
	    	  </li>

	          <li class="divider"></li>
	          
			  <li>
	    		<%= link_to('Create New', new_product_path) %>
	    	  </li>
	    	  
	    	  <li class="divider"></li>
	    	  
	        </ul>
	      </li>
	      
	      <!-- Menu for managing Orders-->
	      <li class="has-dropdown"><a href="#">Orders</a>
	
	        <ul class="dropdown">
	          <li>
	    		<%= link_to('View Orders', orders_path) %>
	    	  </li>

	          <li class="divider"></li>
	          
			  <li>
	    		<%= link_to('Create New', '#') %>
	    	  </li>
	    	  
	    	  <li class="divider"></li>
	    	  
	        </ul>
	      
	      <!-- Menu for managing users-->
	      <li class="has-dropdown"><a href="#">Users</a>
	
	        <ul class="dropdown">
	          <li>
	    		<%= link_to('Create New Admin', new_admin_registration_path) %>
	    	  </li>
	        	
	          <li>
	    		<%= link_to('Edit account', edit_admin_registration_path) %>
	    	  </li>
	    	  
	    	  <li>
	    		<%= link_to('View All Admins', admin_index_path) %>
	    	  </li>
	    	  
	          <li class="divider"></li>
	          
			  <li>
	    		<%= link_to('Admin Logout', destroy_admin_session_path, :method=>'delete') %>
	    	  </li>
	    	  
	    	  <li class="divider"></li>
	    	  
	        </ul>
	      </li>
        <% end %>
      	
      
      <li class="divider"></li>
     
    </ul>

	    <!-- Right Nav Section -->
	    <ul class="right">
	      <li class="divider hide-for-small"></li>
	  
	      <li class="has-form">
	        <form>
	          <div class="row collapse">
	            <div class="small-8 columns">
	              <input type="text" placeholder="Search eShop">
	            </div>
	            <div class="small-4 columns">
	              <a href="#" class="button">Search</a>
	            </div>
	          </div>
	        </form>
	      </li>
	      <li class="divider show-for-small"></li>
	      
	    </ul>
  </section>
</nav>
</header>